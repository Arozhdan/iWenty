{
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./src",
        "module": "ESNext",
        "moduleResolution": "Node",
        "declarationDir": "./dist",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "declaration": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "es5"
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "build", "node_modules"],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
